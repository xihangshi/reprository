	journal = {Nature},
	author = {Zhang, Yuanbo and Tang, Tsung Ta and Girit, Caglar and Hao, Zhao and Martin, Michael C. and Zettl, Alex and Crommie, Michael F. and Shen, Y. Ron and Wang, Feng},
