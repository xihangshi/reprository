	author = {Yang, Yujia and Henke, Jan-Wilke and Raja, Arslan S. and Kappert, F. Jasmin and Huang, Guanhao and Arend, Germaine and Qiu, Zheru and Feist, Armin and Wang, Rui Ning and Tusnin, Aleksandr and Tikan, Alexey and Ropers, Claus and Kippenberg, Tobias J.},
	month = jul,
	year = {2023},
	note = {Issue: arXiv:2307.12142
arXiv: 2307.12142 [nlin, physics:physics]},
	keywords = {Nonlinear Sciences - Pattern Formation and Solitons, Physics - Optics},
